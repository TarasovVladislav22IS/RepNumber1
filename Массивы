Module Module1

    Sub Main()
        Dim a(5) As Integer
        For i = 0 To 5
            a(i) = Console.ReadLine
        Next
        reverse(a)
        Max(a)
        Min(a)
        Console.WriteLine("Введите число для поиска в массиве")
        search(a)
        Console.ReadKey()
    End Sub
    Sub reverse(a() As Integer)
        For j = a.Length - 1 To 0 Step -1
            Console.WriteLine(a(j))
        Next
    End Sub
    Sub search(a() As Integer)
        Dim b As Integer
        b = Console.ReadLine
        For k = 0 To a.Length - 1
            If b = a(k) Then
                Console.WriteLine(k & " Строка")
            End If
        Next
    End Sub
    Sub Max(a() As Integer)
        Dim b As Integer
        For l = 0 To a.Length - 1
            If b < a(l) Then
                b = a(l)
            End If
        Next
        Console.WriteLine("Максимальное значение = " & b)
    End Sub
    Sub Min(a() As Integer)
        Dim b As Integer
        For l = 0 To a.Length - 1
            b = a(0)
            If b > a(l) Then
                b = a(l)
            End If
        Next
        Console.WriteLine("Минимальное значение = " & b)
    End Sub
End Module
