Module Module1

    Sub Main()
        Dim a, b, a1, b1, a2, b2, d, e, x, y1, xx, yy, x3, y3, x4, y4 As Integer
        Dim c As String
        Dim sum1 As String
        Dim sum2 As String
        Dim f As String
        Dim sum3 As String
        Do
            Console.Clear()
            Console.WriteLine("Нарисовать сетку - 1, нарисовать звезду - 2, изменить цвет фона и символов - 3, нарисовать заполненный квадрат - 4, нарисовать пустой квадрат - 5, выйти из программы - 6")
            d = Console.ReadLine
            Select Case d
                Case 1
                    Console.Clear()
                    Console.WriteLine("Введите позицию х")
                    a = Console.ReadLine
                    Console.WriteLine("Введите позицию у")
                    b = Console.ReadLine
                    Console.WriteLine("Введите символ")
                    c = Console.ReadLine
                    a1 = a
                    b1 = b
                    a2 = a
                    b2 = b
                    Console.SetCursorPosition(a1, b1)
                    For o = 1 To 5
                        For j = 1 To 6
                            Console.SetCursorPosition(a1, b1)
                            For i = 1 To 10
                                Console.Write(c)
                            Next
                            b1 += 5
                        Next
                        a1 = a
                        b1 = b
                        a1 += 9
                        Console.SetCursorPosition(a1, b1)
                        a += 9
                    Next
                    a1 = a
                    b1 = b
                    Console.SetCursorPosition(a2, b2)
                    For p = 1 To 3
                        For n = 1 To 2
                            For m = 1 To 5
                                Console.SetCursorPosition(a2, b2)
                                For k = 1 To 5
                                    Console.SetCursorPosition(a2, b2)
                                    For l = 1 To 1
                                        Console.Write(c)
                                    Next
                                    b2 += 1
                                Next
                            Next
                            a2 += 9
                            b2 = b
                            Console.SetCursorPosition(a2, b2)
                        Next

                    Next
                    Console.ReadKey()
                Case 2
                    Console.Clear()
                    Console.WriteLine("Введите любой понравившийся символ")
                    sum1 = Console.ReadLine()
                    x = 15
                    y1 = 20
                    Console.SetCursorPosition(x, y1)
                    For i = 1 To 10
                        For j = 1 To 1
                            Console.Write(sum1)
                        Next
                        x += 1
                        y1 -= 1
                        Console.SetCursorPosition(x, y1)
                    Next

                    For i = 0 To 10
                        For j = 1 To 1
                            Console.Write(sum1)
                        Next
                        x += 1
                        y1 += 1
                        Console.SetCursorPosition(x, y1)
                    Next
                    x = x - 1
                    y1 = y1 - 1
                    Console.SetCursorPosition(x, y1)
                    For k = 1 To 8
                        For l = 1 To 1
                            Console.Write(sum1)
                        Next
                        x = x - 3
                        y1 = y1 - 1
                        Console.SetCursorPosition(x, y1)
                    Next
                    For m = 1 To 28
                        Console.Write(sum1)
                    Next
                    x = 39
                    Console.SetCursorPosition(x, y1)
                    For n = 1 To 8
                        For o = 1 To 1
                            Console.Write(sum1)
                        Next
                        x = x - 3
                        y1 = y1 + 1
                        Console.SetCursorPosition(x, y1)
                    Next

                    Console.ReadKey()
                Case 3
                    Console.Clear()
                    Console.WriteLine("Изменить цвет фона на синий - 1, изменить цвет фона на жёлтый - 2, изменить цвет фона на красный - 3, вернуть чёрный цвет фона - 4, изменить цвет шрифта на тёмно-голубой - 5, изменить цвет шрифта на зелёный - 6, изменить цвет шрифта на чёрный - 7, вернуть цвет шрифта и фона по умолчанию - 8")
                    e = Console.ReadLine
                    Select Case e
                        Case 1
                            Do
                                Console.BackgroundColor = ConsoleColor.Blue
                                Console.WriteLine("Сохранить изменения? (y/n)")
                                f = Console.ReadLine()
                                If f = "y" Then
                                    Exit Do
                                ElseIf f = "n" Then
                                    Console.BackgroundColor = ConsoleColor.Black
                                    Exit Do
                                Else
                                    Console.Clear()
                                    Continue Do
                                End If
                            Loop
                        Case 2
                            Do
                                Console.BackgroundColor = ConsoleColor.Yellow
                                Console.WriteLine("Сохранить изменения? (y/n)")
                                f = Console.ReadLine()
                                If f = "y" Then
                                    Exit Do
                                ElseIf f = "n" Then
                                    Console.BackgroundColor = ConsoleColor.Black
                                    Exit Do
                                Else
                                    Console.Clear()
                                    Continue Do
                                End If
                            Loop
                        Case 3
                            Do
                                Console.BackgroundColor = ConsoleColor.Red
                                Console.WriteLine("Сохранить изменения? (y/n)")
                                f = Console.ReadLine()
                                If f = "y" Then
                                    Exit Do
                                ElseIf f = "n" Then
                                    Console.BackgroundColor = ConsoleColor.Black
                                    Exit Do
                                Else
                                    Console.Clear()
                                    Continue Do
                                End If
                            Loop
                        Case 4
                            Console.ResetColor()
                        Case 5
                            Do
                                Console.ForegroundColor = ConsoleColor.DarkCyan
                                Console.WriteLine("Сохранить изменения? (y/n)")
                                f = Console.ReadLine()
                                If f = "y" Then
                                    Exit Do
                                ElseIf f = "n" Then
                                    Console.ForegroundColor = ConsoleColor.Gray
                                    Exit Do
                                Else
                                    Console.Clear()
                                    Continue Do
                                End If
                            Loop
                        Case 6
                            Do
                                Console.ForegroundColor = ConsoleColor.Green
                                Console.WriteLine("Сохранить изменения? (y/n)")
                                f = Console.ReadLine()
                                If f = "y" Then
                                    Exit Do
                                ElseIf f = "n" Then
                                    Console.ForegroundColor = ConsoleColor.Gray
                                    Exit Do
                                Else
                                    Console.Clear()
                                    Continue Do
                                End If
                            Loop
                        Case 7
                            Do
                                Console.ForegroundColor = ConsoleColor.Black
                                Console.WriteLine("Сохранить изменения? (y/n)")
                                f = Console.ReadLine()
                                If f = "y" Then
                                    Exit Do
                                ElseIf f = "n" Then
                                    Console.ForegroundColor = ConsoleColor.Gray
                                    Exit Do
                                Else
                                    Console.Clear()
                                    Continue Do
                                End If
                            Loop
                        Case 8
                            Console.ResetColor()
                    End Select
                Case 4
                    Console.WriteLine("Введите желаемый символ")
                    sum2 = Console.ReadLine
                    xx = 10
                    yy = 10
                    Console.SetCursorPosition(xx, yy)
                    For aa = 1 To 10
                        For ab = 1 To 10
                            Console.Write(sum2 & " ")
                        Next
                        yy = yy + 1
                        Console.SetCursorPosition(xx, yy)
                    Next
                    Console.ReadKey()
                Case 5
                    Console.WriteLine("Введите желаемый символ")
                    sum3 = Console.ReadLine
                    x3 = 10
                    y3 = 10
                    x4 = 10
                    y4 = 10
                    Console.SetCursorPosition(x3, y3)
                    For ac = 1 To 10
                        Console.Write(sum3 & " ")
                    Next
                    y3 = y3 + x3 - 1
                    Console.SetCursorPosition(x3, y3)
                    For ad = 1 To 10
                        Console.Write(sum3 & " ")
                    Next
                    y3 = y4
                    x3 = x4
                    Console.SetCursorPosition(x3, y3)
                    For ad = 1 To 10
                        For ae = 1 To 1
                            Console.Write(sum3)
                        Next
                        y3 = y3 + 1
                        Console.SetCursorPosition(x3, y3)
                    Next
                    x3 = x4
                    y3 = y4
                    x3 = x3 + x3 + x3 - 2
                    Console.SetCursorPosition(x3, y3)
                    For ad = 1 To 10
                        For ae = 1 To 1
                            Console.Write(sum3)
                        Next
                        y3 = y3 + 1
                        Console.SetCursorPosition(x3, y3)
                    Next
                    Console.ReadKey()
                Case 6
                    Exit Sub
            End Select
        Loop
    End Sub
End Module
